FROM greglogan/ocqa-{0}-{1}:{{ docker_image_tag }}

RUN groupadd -g {3} builder && \
    useradd -m -u {2} -g {3} -s /bin/bash -d /builder builder && \
    mkdir -p /builder/.ssh /builds && \
    chown -R builder:builder /builder /builds

USER builder

WORKDIR /builder

CMD ["/usr/local/bin/dumb-init", "twistd", "--pidfile=", "-ny", "buildbot.tac"]

