## Special allowences for Opencast set-up
opencast        ALL=(root) NOPASSWD: /bin/systemctl reload nginx.service
opencast        ALL=(root) NOPASSWD: /bin/systemctl stop opensearch.service
opencast        ALL=(root) NOPASSWD: /bin/systemctl restart opensearch.service
opencast        ALL=(root) NOPASSWD: /bin/systemctl start opencast.service
opencast        ALL=(root) NOPASSWD: /bin/systemctl stop opencast.service
opencast        ALL=(root) NOPASSWD: /bin/rm -rf /var/lib/opensearch/nodes
opencast        ALL=(root) NOPASSWD: /usr/bin/systemctl reload nginx.service
opencast        ALL=(root) NOPASSWD: /usr/bin/systemctl stop opensearch.service
opencast        ALL=(root) NOPASSWD: /usr/bin/systemctl restart opensearch.service
opencast        ALL=(root) NOPASSWD: /usr/bin/systemctl start opencast.service
opencast        ALL=(root) NOPASSWD: /usr/bin/systemctl stop opencast.service
opencast        ALL=(root) NOPASSWD: /usr/bin/rm -rf /var/lib/opensearch/nodes
